<%- include("../../shared/includes/head.ejs", {pageTitle: 'signup' }) %>
    <link rel="stylesheet" href="/styles/products.css">
    </head>

    <body>
        <%- include('../../shared/includes/header.ejs') %>
            <main>
                <h1>Product Administration</h1>
                <div class="title">
                    <h2>Update Products</h2>
                </div>
                <section class="update-section">
                    <div class="header-section">
                        <form action="/admin/products/<%= product.id %>" method="POST" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="title" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="title" name="title"
                                        value="<%= product.title %>">
                                </div>
                                <div class="mb-3">
                                    <label for="image" class="form-label">Image</label>
                                    <input type="file" class="form-control" id="image" name="image">
                                </div>
                                <div class="mb-3">
                                    <label for="price" class="form-label">Price</label>
                                    <input type="number" class="form-control" id="price" name="price"
                                        value="<%= product.price %>">
                                </div>
                                <div class="mb-3">
                                    <label for="summary" class="form-label">Summary</label>
                                    <textarea class="form-control" id="summary" rows="5"
                                        name="summary"><%= product.summary %></textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea class="form-control" id="description" rows="5"
                                        name="description"><%= product.description %></textarea>
                                </div>
                            </div>
                            <div class="update-action">
                                <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Reset</button>
                                <button class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                    <%- include("../products/new-product.ejs")%>
                </section>
            </main>
            <%- include("../../shared/includes/footer.ejs") %>